<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.BestShop.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>


    <style name="Widget.BestShop.TextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="singleLine">true</item>
    </style>

    <style name="Widget.BestShop.TextInputEditText.Login" parent="Widget.BestShop.TextInputEditText">
        <item name="android:textAppearance">@style/TextAppearance.BestShop.EditText.Login</item>
    </style>


    <style name="Widget.BestShop.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/sign_in_background_button</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.BestShop.Button.Login" parent="Widget.BestShop.Button">
        <item name="android:layout_width">289dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:textColor">@color/sign_in_button_text_color</item>
        <item name="android:textAppearance">@style/TextAppearance.BestShop.Button.Login</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



</resources>