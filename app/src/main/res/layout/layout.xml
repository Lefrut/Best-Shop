<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/sign_in_page_background">

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.BestShop.Button.Login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="@string/sign_in"
        app:cornerRadius="15dp"
        tools:ignore="TouchTargetSizeCheck" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="129dp"
            android:layout_height="16dp"
            android:layout_toStartOf="@id/log"
            android:text="@string/already_have_ana_account"
            android:textAppearance="@style/TextAppearance.BestShop.HaveAccountText.Default"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/log"
            android:layout_width="36dp"
            android:layout_height="16dp"
            android:text="@string/log_in"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.BestShop.HaveAccountText.Login"
            />

    </RelativeLayout>

</LinearLayout>