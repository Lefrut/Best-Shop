<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="114dp"
    android:layout_height="149dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="0dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/latest_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/test_image" />


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="35dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="91dp"
                    app:cardBackgroundColor="@color/page1_card_category"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/latest_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/phones"
                        android:textColor="@color/page1_card_category_text"
                        android:textSize="6sp"
                        tools:ignore="SmallSp,TextContrastCheck" />


                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/latest_title"
                    android:layout_width="75dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="3dp"
                    android:gravity="top|start"
                    android:text="@string/samsung_s10"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    tools:ignore="SmallSp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/latest_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="1dp"
                    android:gravity="top|start"
                    android:text="@string/_180_000"
                    android:textColor="@color/white"
                    android:textSize="7sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="124dp"
                android:layout_marginBottom="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10000dp"
                app:cardBackgroundColor="@color/page1_card_category_floating_button">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:srcCompat="@drawable/plus"
                    android:layout_gravity="center"
                    />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </FrameLayout>


</com.google.android.material.card.MaterialCardView>