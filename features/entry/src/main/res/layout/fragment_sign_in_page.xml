<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sign_in_page.SignInPageFragment"
    android:orientation="vertical"
    android:background="@color/sign_in_page_background">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header"
        android:layout_width="150dp"
        android:layout_marginTop="121dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|top"
        android:text="@string/sign_in"
        android:textAppearance="@style/TextAppearance.BestShop.TextView.Header"
        >
    </com.google.android.material.textview.MaterialTextView>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="289dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        style="@style/Widget.BestShop.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/first_name"
            style="@style/TextAppearance.BestShop.EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_background"
            android:gravity="center"
            android:hint="@string/first_name"
            android:inputType="text"
            android:padding="0dp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="289dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        style="@style/Widget.BestShop.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/last_name"
            style="@style/TextAppearance.BestShop.EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_background"
            android:gravity="center"
            android:hint="@string/last_name"
            android:inputType="text"
            android:padding="0dp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="289dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        style="@style/Widget.BestShop.TextInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            style="@style/TextAppearance.BestShop.EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_background"
            android:gravity="center"
            android:hint="@string/email"
            android:inputType="text"
            android:padding="0dp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_in_button"
        style="@style/Widget.BestShop.Button.Login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="@string/sign_in"
        app:cornerRadius="15dp"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck,DuplicateSpeakableTextCheck" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="129dp"
            android:layout_height="16dp"
            android:layout_toStartOf="@id/log"
            android:text="@string/already_have_ana_account"
            android:textAppearance="@style/TextAppearance.BestShop.HaveAccountText.Default"
            tools:ignore="TextContrastCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/log"
            android:layout_width="36dp"
            android:layout_height="16dp"
            android:text="@string/log_in"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.BestShop.HaveAccountText.Login"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="38dp"
        android:headerDividersEnabled="false"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        >

        <!--android:divider="@null"-->



    </ListView>

</LinearLayout>